<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <record id="dynamic_variants" model="ir.ui.view">
    <field name="name">Product Dynamic Attribute</field>
    <field name="model">product.template</field>
    <field name="inherit_id" ref="product.product_template_form_view" />
    <field name="arch" type="xml">
      <notebook position="inside">
        <page name="dynamic_attributes" string="Dynamic Attributes">
          <field name="dynamic_attribute_ids" widget="many2many">
            <tree string="Attribute" editable='bottom'>
              <field name="name" />
              <field name="type" />
<!--
              <field name="float_min" attrs="{'invisible':[('type','in',['int','image'])],'required':[('type','=','float')]}"/>
              <field name="float_max" attrs="{'invisible':[('type','in',['int','image'])],'required':[('type','=','float')]}"/>
-->
            </tree>
          </field>
        </page>
      </notebook>
    </field>
  </record>
</odoo>
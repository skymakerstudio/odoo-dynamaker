<odoo>
    <data>
        <record id="dynamaker_product_checkbox" model="ir.ui.view">
            <field name="name">product.product.search</field>
            <field name="model">product.template</field>
            <field name="inherit_id" ref="product.product_template_only_form_view"/>
            <field name="arch" type="xml">
                <div name="options" position="inside">
                    <div>
                        <field name="dynamaker_product"/>
                        <label for="dynamaker_product"/>
                    </div>
                </div>
            </field>
        </record>
        
        <record id="product_template_form_view" model="ir.ui.view">
            <field name="name">product.template.common.form</field>
            <field name="model">product.template</field>
            <field name="inherit_id" ref="product.product_template_form_view"/>
            <field name="arch" type="xml">
                <field name="categ_id" position="after">
<!--
                    <t t-if="True">
-->
                        <field name="dynamaker_url" />
                        <field name="python_code" />
<!--
                    </t>
                    <t t-else="">
                        <field name="dynamaker_url" invisible='1' />
                        <field name="python_code" invisible='1' />
                    </t>
-->
                </field>
            </field>
        </record>
    </data>
</odoo>
